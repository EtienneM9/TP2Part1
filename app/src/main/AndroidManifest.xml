        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TP2Part1"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDY4nwE8IgbiOyn1LyQLpSedn6oi0lkSVc"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TP2Part1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".SensorListActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".SensorDetectionActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".ProximityActivity"
            android:exported="false" />

        <activity
            android:name=".DirectionActivity"
            android:exported="false" />

        <activity
            android:name=".AccelerometerColorActivity"
